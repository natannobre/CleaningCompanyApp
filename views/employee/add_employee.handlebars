<script>
  var elementoAtivo = document.getElementsByClassName("active");
  elementoAtivo[0].classList.remove('active');
  var elemento = document.getElementById("newEmployee");
  elemento.classList.add("active");
</script>

{{#each erros}}
  <div class="alert alert-danger">
    <h5>{{texto}}</h5>
  </div>
{{else}}

{{/each}}

<div class="card">

  <div class="card-header text-white" style="background-color:lightslategray">
    <div class="row g-3">
      <div class="col-1">
        <img class="rounded mx-auto d-block" src="/img/add-user2.png" width="60px" heigth="60px" alt="">
      </div>
      <div class="col-11 mt-4">
        <h1>Novo Funcionário</h1>
      </div>
    </div>
  </div>
  <div class="card-body bg-info">
    <form method="post" action="add" >
      <div class="mb-3">
        <label for="user_name" class="form-label">Nome de Usuário</label>
        <input type="text" class="form-control" name="user_name" id="user_name" required="true"
          aria-describedby="user_name">
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Senha</label>
        <input type="password" class="form-control" name="password" id="password"
          aria-describedby="password" required="true">
      </div>
      <div class="mb-3">
        <label for="first_name" class="form-label">Primeiro Nome</label>
        <input type="text" class="form-control" name="first_name" id="first_name" required="true">
      </div>
      <div class="mb-3">
        <label for="last_name" class="form-label">Último Nome</label>
        <input type="text" class="form-control" name="last_name" id="last_name" required="true">
      </div>
      <div class="row g-3 mb-3">
        <div class="col-md-6">
          <label for="SSN" class="form-label">SSN</label>
          <input type="text" class="form-control" id="SSN" name="ssn" required="true">
        </div>
        <div class="col-md-6">
          <label for="phone" class="form-label">Telefone</label>
          <input type="text" class="form-control" id="phone" name="phone" required="true">
        </div>
      </div>
      <div align="center">
        <button type="submit" class="btn btn-primary">Cadastrar</button>
        <button type="reset" class="ms-3 btn btn-primary">Limpar</button>
      </div>
    </form>
  </div>
</div>